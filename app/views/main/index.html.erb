<div class="row g-0">
  <h1>Welcome!</h1>
    <% if user_signed_in? %>
      <div class="col col-xs-4 col-sm-6 col-md-6 col-lg-4">
        <div class="card border-light mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "Physicians", physicians_path %>
            </h5>
          </div>
        </div>
        <div class="card border-light mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "Patients", patients_path %>
            </h5>
          </div>
        </div>
        <div class="card border-light mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "Appointments", appointments_path %>
            </h5>
          </div>
        </div>
        <% if can? :manage, DiagnosisItem %>
          <div class="card border-light mb-3">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to "Diagnosis Items", diagnosis_items_path %>
              </h5>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="col col-xs-4 col-sm-6 col-md-6 col-lg-4">
        <div class="card border-light mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "Sign Up", new_user_registration_path %>
            </h5>
          </div>
        </div>
        <div class="card border-light mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "Log In", new_user_session_path %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
</div>
