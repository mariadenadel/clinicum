<div class="table-title">
  <div class="row mt-3 pt-3">
    <div class="col-sm-10">
      <h1>All Physicians</h1>
    </div>
    <% if can? :create, @physicians %>
      <div class="col-sm-2">
        <%= link_to "New Physician", new_physician_path, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Phone Number</th>
    <th>Level</th>
    <th>
    <% if can?(:update, @physicians) || can?(:destroy, @physicians) %>
      Actions
    <% end %>
    </th>
  </tr>
  <% @physicians.each do |physician| %>
    <tr>
      <td> <%= link_to physician.id, physician_path(physician.id) %> </td>
      <td> <%= physician.first_name %> </td>
      <td> <%= physician.last_name %> </td>
      <td> <%= physician.phone_number %> </td>
      <td> <%= physician.level %> </td>
      <td>
      <% if can? :update, @physicians %>
          <%= link_to "Edit", edit_physician_path(physician.id), class: "btn btn-outline-primary" %>
      <% end %>
      <% if can? :destroy, @physicians %>
          <%= link_to "Delete", physician_path(physician.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
